<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #F7F9FB;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="all.controller.ClaimScreenController">
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Claim Management" />
            <TableView fx:id="tvClaims" prefHeight="300.0" prefWidth="724.0" style="-fx-background-color: white; -fx-border-color: #D5D8DC; -fx-border-width: 1;">
                <columns>
                    <TableColumn fx:id="colId" style="-fx-alignment: CENTER;" text="ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="id" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colCustomerId" style="-fx-alignment: CENTER;" text="Customer ID">
                        <cellValueFactory>
                            <PropertyValueFactory property="customerId" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colClaimDate" style="-fx-alignment: CENTER;" text="Claim Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="claimDate" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colInsuredPerson" style="-fx-alignment: CENTER;" text="Insured Person">
                        <cellValueFactory>
                            <PropertyValueFactory property="insuredPerson" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colExamDate" style="-fx-alignment: CENTER;" text="Exam Date">
                        <cellValueFactory>
                            <PropertyValueFactory property="examDate" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colDocuments" style="-fx-alignment: CENTER;" text="Documents">
                        <cellValueFactory>
                            <PropertyValueFactory property="documents" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colClaimAmount" style="-fx-alignment: CENTER;" text="Claim Amount">
                        <cellValueFactory>
                            <PropertyValueFactory property="claimAmount" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colReceiverBankingInfo" style="-fx-alignment: CENTER;" text="Receiver Banking Info">
                        <cellValueFactory>
                            <PropertyValueFactory property="receiverBankingInfo" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colStatus" style="-fx-alignment: CENTER;" text="Status">
                        <cellValueFactory>
                            <PropertyValueFactory property="status" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </VBox>
    </center>
   <bottom>
        <HBox alignment="CENTER" spacing="80.0" style="-fx-padding: 10; -fx-background-color: #2C3E50;" BorderPane.alignment="CENTER">
         <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0">
            <children>
               <Label text="Customer ID" textFill="WHITE" />
               <Label text="Claim Date" textFill="WHITE" />
               <Label text="Exam Date" textFill="WHITE" />
               <Label text="Insured Person" textFill="WHITE" />
               <Label text="Status" textFill="WHITE" />
               <Label text="Status" textFill="WHITE" />
            </children>
         </VBox>
         <VBox prefHeight="200.0" prefWidth="301.0" spacing="10.0">
            <children>
               <TextField />
               <TextField />
               <TextField />
               <TextField />
               <TextField />
               <TextField />
            </children>
         </VBox>
         <VBox prefHeight="119.0" prefWidth="165.0" spacing="20.0">
            <children>
               <TextField fx:id="tfTotalAmount" alignment="CENTER" disable="true" promptText="Total amount">
                  <font>
                     <Font name="System Italic" size="20.0" />
                  </font>
               </TextField>
                  <Button fx:id="btnSumUp" maxWidth="1.7976931348623157E308" onAction="#handleSumUpButton" prefHeight="32.0" prefWidth="165.0" style="-fx-background-color: green; -fx-text-fill: white; -fx-font-weight: bold;" text="Sum All Successful Claims" />
               <Button fx:id="btnReload" maxWidth="1.7976931348623157E308" onAction="#handleReloadButton" prefHeight="28.0" prefWidth="163.0" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;" text="Reload" />
               <Button fx:id="backButton" maxWidth="1.7976931348623157E308" onAction="#handleBackButton" prefHeight="28.0" prefWidth="163.0" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-weight: bold;" text="Back">
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
               </Button>
            </children>
            <HBox.margin>
               <Insets />
            </HBox.margin>
         </VBox>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="20.0" />
         </padding>
        </HBox>
   </bottom>
</BorderPane>
