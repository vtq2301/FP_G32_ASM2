<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<BorderPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="rmit.fp.g32_asm2.controller.customer.policyOwner.DashboardController"
        prefHeight="800" prefWidth="1200"
>

    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #FF0000; -fx-padding: 10;">
            <Label text="DASHBOARD" style="-fx-text-fill: white; -fx-font-size: 18px;" />
            <Pane HBox.hgrow="ALWAYS"/>
            <ImageView fx:id="userIcon" fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true" onMouseClicked="#showProfile"/>

            <Button text="Logout" style="-fx-background-color: #000000; -fx-text-fill: white;"/>
        </HBox>
    </top>
    <!-- Side Menu -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #34495E; -fx-padding: 10;">
            <Button text="Claims" prefWidth="150" onAction="#showClaims"/>
            <Button text="Beneficiaries" prefWidth="150" onAction="#showBeneficiaries"/>
            <Button text="Logs" prefWidth="150" onAction="#showLogs"/>
        </VBox>
    </left>
    <!-- Main Content Area -->
    <center>
        <VBox fx:id="mainContent" spacing="10">
            <!-- Main content will be injected here -->
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #000000; -fx-padding: 10;">
            <Label text="Footer" style="-fx-text-fill: white;"/>
        </HBox>
    </bottom>
</BorderPane>
