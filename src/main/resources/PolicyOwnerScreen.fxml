<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="all.controller.customer.PolicyOwner">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="fullNameField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Email Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="contactNumberField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Policy Number:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="policyNumberField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    </GridPane>

    <Button text="Manage Beneficiary Claims" fx:id="manageBeneficiaryClaimsButton" onAction="#handleManageBeneficiaryClaims" style="-fx-background-color: darkblue; -fx-text-fill: white;"/>
    <Button text="Manage Beneficiaries" fx:id="manageBeneficiariesButton" onAction="#handleManageBeneficiaries" style="-fx-background-color: darkgreen; -fx-text-fill: white;"/>
    
    <Button text="Update User Info" fx:id="updateUserInfoButton" onAction="#handleUpdateUserInfo" style="-fx-background-color: darkorange; -fx-text-fill: white;"/>
    <Button text="Change Password" fx:id="changePasswordButton" onAction="#handleChangePassword" style="-fx-background-color: darkred; -fx-text-fill: white;"/>
    <Button text="Logout" fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: grey; -fx-text-fill: white;"/>
</VBox>
