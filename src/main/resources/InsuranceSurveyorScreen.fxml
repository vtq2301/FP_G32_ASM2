<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="all.controller.insurance.InsuranceSurveyor"
      style="-fx-background-color: #F7F9FB; -fx-padding: 20;">
    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="fullNameField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-background-color: #ECF0F1; -fx-font-size: 14px;"/>

        <Label text="Email Address:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 14px;"/>
        <TextField fx:id="emailField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-color: #ECF0F1; -fx-font-size: 14px;"/>

        <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 14px;"/>
        <TextField fx:id="contactNumberField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-background-color: #ECF0F1; -fx-font-size: 14px;"/>

        <Label text="Surveyor ID:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-size: 14px;"/>
        <TextField fx:id="surveyorIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-background-color: #ECF0F1; -fx-font-size: 14px;"/>

        <Label text="Filter Claims:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-size: 14px;"/>
        <ComboBox fx:id="filterOptions" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 14px;"/>

        <Button text="Request More Information" fx:id="requestMoreInfoButton" onAction="#requestMoreInfo" style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
        <Button text="Propose Claim to Manager" fx:id="proposeClaimButton" onAction="#proposeClaim" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

        <ListView fx:id="claimsListView" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" style="-fx-font-size: 14px;"/>
    </GridPane>
</VBox>
