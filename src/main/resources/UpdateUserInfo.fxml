<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="all.controller.customer.UpdateUserInfoController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <GridPane hgap="10" vgap="10">
        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Email Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="contactNumberField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button text="Save" onAction="#handleSaveUserInfo" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Button fx:id="backButton" text="Back" onAction="#handleBackButton" GridPane.columnIndex="1" GridPane.rowIndex="4"/> <!-- New back button -->
    </GridPane>
</VBox>
