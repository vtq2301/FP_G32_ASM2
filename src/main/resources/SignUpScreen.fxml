<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<VBox spacing="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="all.controller.SignUpScreen"
      style="-fx-background-color: #F7F9FB; -fx-padding: 20;">
    <GridPane hgap="10" vgap="10">
        <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 14px;"/>
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 14px;"/>

        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 14px;"/>
        <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 14px;"/>

        <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-size: 14px;"/>
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-font-size: 14px;"/>

        <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-size: 14px;"/>
        <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 14px;"/>

        <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-size: 14px;"/>
        <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-font-size: 14px;"/>

        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <Button text="Register" onAction="#handleRegister" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <Button text="Go To Sign In" onAction="#handleShowLogin" style="-fx-background-color: #95A5A6; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
        <Label fx:id="statusText" GridPane.columnIndex="1" GridPane.rowIndex="7" textFill="red" style="-fx-font-size: 14px;"/>
    </GridPane>
</VBox>
