<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="all.controller.SignUpScreen"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="fullNameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="phoneNumberField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <ComboBox fx:id="roleComboBox" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <Button text="Register" onAction="#handleRegister"/>
        <Button text="Go To Sign In" onAction="#handleShowLogin"/>
    </HBox>
    <Label fx:id="statusText" GridPane.columnIndex="1" GridPane.rowIndex="7" textFill="red"/>
</GridPane>
