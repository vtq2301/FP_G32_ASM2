<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="all.controller.customer.Dependent">
    <HBox spacing="10" alignment="TOP_RIGHT">
        <Button text="Logout" onAction="#handleLogout"/>
    </HBox>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Phone Number:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Button fx:id="manageClaimButton" text="Manage Claim" GridPane.columnIndex="1" GridPane.rowIndex="3" onAction="#handleManageClaim"/>
        <Button fx:id="updateUserInfoButton" text="Update User Information" GridPane.columnIndex="1" GridPane.rowIndex="4" onAction="#handleUpdateUserInfo"/> <!-- New Update Button -->
        <Button fx:id="changePasswordButton" text="Change Password" GridPane.columnIndex="1" GridPane.rowIndex="5" onAction="#handleChangePassword"/> <!-- New Change Password Button -->
    </GridPane>
</VBox>
